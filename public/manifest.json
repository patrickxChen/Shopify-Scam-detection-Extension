{
  "manifest_version": 3,
  "name": "Guardify",
  "short_name": "Guardify",
  "version": "0.1.0",
  "description": "Flags risk signals on Shopify product pages.",
  "action": {
    "default_title": "Scan this product",
    "default_popup": "index.html"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png",
    "192": "icons/icon-192.png",
    "512": "icons/icon-512.png"
  },
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["https://*/products/*", "https://*/*/products/*"],
  "content_scripts": [
    {
      "matches": ["https://*/products/*", "https://*/*/products/*"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ]
}
